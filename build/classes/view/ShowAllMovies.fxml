<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.ShowAllMoviesController"
      alignment="center" spacing="10"
      styleClass="root"
      prefWidth="800.0"
>
    <HBox>
        <ImageView>
            <image><Image url="@movie_icon.png"/></image>
        </ImageView>
        <Label styleClass="h1" text="${'\nAll Movies'}"/>
    </HBox>
    <TableView fx:id="moviesTv" items="${controller.catalogue.allMovies}" prefHeight="200">
        <placeholder>
            <Label text="No results found."/>
        </placeholder>
	<columns>
            <TableColumn text="Title">
		<cellValueFactory><PropertyValueFactory property="title"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Year">
		<cellValueFactory><PropertyValueFactory property="year"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Genre">
                <cellValueFactory><PropertyValueFactory property="genre"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Price">
                <cellValueFactory><PropertyValueFactory property="price"/></cellValueFactory>
            </TableColumn>
	</columns>
    </TableView>

    <HBox alignment="center">
        <Button onAction="#handleExit" text="Exit" />
    </HBox>
    <stylesheets>
        <URL value="@kiosk.css"/>
    </stylesheets>

</VBox>
